{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/server.js"
      }
    ],
    "redirects": [
        {
          "source": "/:short_id",
          "destination": "https://shorrtly.vercel.app/:short_id"
        },
        {
          "source": "/:/:custom_url",
          "destination": "https://shorrtly.vercel.app/:/:custom_url"
        }
      ]
  }